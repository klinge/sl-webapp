{
    "require": {
        "vlucas/phpdotenv": "*",
        "phpmailer/phpmailer": "^7.0",
        "monolog/monolog": "^3.7",
        "andkab/php-turnstile": "^1.0",
        "laminas/laminas-diactoros": "^3.5",
        "guzzlehttp/guzzle": "^7.0",
        "league/container": "^5.1",
        "league/route": "^6.2"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^4.0",
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^12"
    },
    "autoload": {
        "psr-4": {
            "App\\": "App/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-unit": "phpunit --testsuite unit --configuration phpunit.xml",
        "test-integration": "phpunit --testsuite integration --configuration phpunit.xml",
        "test-coverage": "XDEBUG_MODE=coverage phpunit --coverage-html tests/coverage --configuration phpunit.xml",
        "test-all": [
            "@test-unit",
            "@test-integration"
        ]
    }
}
